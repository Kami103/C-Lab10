<Window x:Class="lab10.GradeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:lab10"
        mc:Ignorable="d"
        Title="GradeWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Button Margin="10" Click="ButtonAdd_OnClick">Dodaj ocene</Button>
            <Button Margin="10" Click="ButtonEdit_OnClick">Edytuj ocene</Button>
            <Button Margin="10" Click="ButtonDel_OnClick">Usuń ocene</Button>
        </StackPanel>
        <DataGrid x:Name="dgOceny"></DataGrid>
    </StackPanel>
</Window>
